<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linear_layout"
    tools:context="com.example.aamir.tablayout.Activities.AddReminder">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <include android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/toolbar"/>


    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TimePicker
                android:id="@+id/timePicker_add_reminder_timePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/linearLayout_add_reminder_Subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/table_row_default_horizontal_padding"
                android:paddingEnd="@dimen/table_row_default_padding_side"
                android:paddingRight="@dimen/table_row_default_padding_side"
                android:paddingTop="22dp"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView_add_reminder_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/image_margin_side"
                    android:layout_marginStart="@dimen/image_margin_side"
                    android:src="@drawable/ic_subject_white_24dp"
                    android:tint="@color/green" />

                <EditText
                    android:id="@+id/editText_add_reminder_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/text_margin_side"
                    android:layout_marginStart="@dimen/text_margin_side"
                    android:background="@android:color/transparent"
                    android:hint="Add Subject"
                    android:inputType="textAutoComplete|textCapSentences"
                    android:maxLines="1"
                    android:textColorHighlight="@color/accentLight"
                    android:textColorHint="@color/textLightGray"
                    android:textSize="20sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_separator_height"
                android:layout_marginLeft="@dimen/line_separator_margin_side_large"
                android:layout_marginStart="@dimen/line_separator_margin_side_large"
                android:background="@color/lightGray" />


            <LinearLayout
                android:id="@+id/linearLayout_add_reminder_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/table_row_default_horizontal_padding"
                android:paddingEnd="@dimen/table_row_default_padding_side"
                android:paddingRight="@dimen/table_row_default_padding_side"
                android:paddingTop="22dp"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView_add_reminder_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/image_margin_side"
                    android:layout_marginStart="@dimen/image_margin_side"
                    android:src="@drawable/ic_description_white_24dp"
                    android:tint="@color/colorPrimary" />

                <EditText
                    android:id="@+id/editText_add_reminder_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/text_margin_side"
                    android:layout_marginStart="@dimen/text_margin_side"
                    android:background="@android:color/transparent"
                    android:hint="Write Content"
                    android:inputType="textMultiLine|textCapSentences|textAutoCorrect"
                    android:lines="@null"
                    android:textColorHighlight="@color/accentLight"
                    android:textColorHint="@color/textLightGray"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_separator_height"
                android:layout_marginLeft="@dimen/line_separator_margin_side_large"
                android:layout_marginStart="@dimen/line_separator_margin_side_large"
                android:background="@color/lightGray" />

            <LinearLayout
                android:id="@+id/linearLayout_add_reminder_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/table_row_default_horizontal_padding"
                android:paddingEnd="@dimen/table_row_default_padding_side"
                android:paddingRight="@dimen/table_row_default_padding_side"
                android:paddingTop="22dp"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView_add_reminder_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/image_margin_side"
                    android:layout_marginStart="@dimen/image_margin_side"
                    android:src="@drawable/ic_subtitles_white_24dp"
                    android:tint="@color/error" />

                <TextView
                    android:id="@+id/textView_add_reminder_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/text_margin_side"
                    android:layout_marginStart="@dimen/text_margin_side"
                    android:background="@android:color/transparent"
                    android:hint="Toady"
                    android:textColorHighlight="@color/accentLight"
                    android:textColorHint="@color/textLightGray"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_separator_height"
                android:layout_marginLeft="@dimen/line_separator_margin_side_large"
                android:layout_marginStart="@dimen/line_separator_margin_side_large"
                android:background="@color/lightGray" />


            <LinearLayout
                android:id="@+id/linearLayout_add_reminder_participants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/table_row_default_horizontal_padding"
                android:paddingEnd="@dimen/table_row_default_padding_side"
                android:paddingRight="@dimen/table_row_default_padding_side"
                android:paddingTop="22dp"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView_add_reminder_participants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/image_margin_side"
                    android:layout_marginStart="@dimen/image_margin_side"
                    android:src="@drawable/ic_color_lens_white_24dp"
                    android:tint="@color/lightBlue" />

                <TextView
                    android:id="@+id/textView_add_reminder_participants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/text_margin_side"
                    android:layout_marginStart="@dimen/text_margin_side"
                    android:background="@android:color/transparent"
                    android:hint="Default Color"
                    android:textColorHighlight="@color/accentLight"
                    android:textColorHint="@color/textLightGray"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_separator_height"
                android:layout_marginLeft="@dimen/line_separator_margin_side_large"
                android:layout_marginStart="@dimen/line_separator_margin_side_large"
                android:background="@color/lightGray" />

            <LinearLayout
                android:id="@+id/linearLayout_add_reminder_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/table_row_default_horizontal_padding"
                android:paddingEnd="@dimen/table_row_default_padding_side"
                android:paddingRight="@dimen/table_row_default_padding_side"
                android:paddingTop="22dp"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView_add_reminder_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/image_margin_side"
                    android:layout_marginStart="@dimen/image_margin_side"
                    android:src="@drawable/ic_notifications_white_24dp"
                    android:tint="@color/accentLight" />

                <TextView
                    android:id="@+id/textView_add_reminder_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/text_margin_side"
                    android:layout_marginStart="@dimen/text_margin_side"
                    android:background="@android:color/transparent"
                    android:hint="Default icon"
                    android:textColorHighlight="@color/accentLight"
                    android:textColorHint="@color/textLightGray"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_separator_height"
                android:layout_marginLeft="@dimen/line_separator_margin_side_large"
                android:layout_marginStart="@dimen/line_separator_margin_side_large"
                android:background="@color/lightGray" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
