<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.aamir.doctoradmin.MainActivity"
    android:background="@color/colorPrimaryDark">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:paddingBottom="30dp">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:weightSum="10">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Find Doctor Admin"
                  android:textColor="@color/cardview_light_background"
                  android:textSize="22sp"
                  android:padding="5dp"
                  android:layout_marginTop="30dp"
                  android:layout_marginLeft="20dp"
                  android:layout_weight="6"/>
              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/retry"
                  android:text="Retry"
                  android:layout_marginTop="30dp"/>
          </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:minHeight="200dp"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               android:layout_marginTop="20dp"
               android:orientation="vertical"
               android:paddingLeft="7dp"
               android:paddingRight="7dp"
               android:paddingTop="10dp"
               android:background="@drawable/card_background_shap"
               android:paddingBottom="20dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Add Doctor"
                   android:textSize="22sp"
                   android:layout_gravity="center"
                   android:textColor="@color/colorPrimary"/>

               <RelativeLayout
                   android:layout_marginTop="15dp"
                   android:layout_width="250dp"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="3dp"
                   android:layout_weight=".28"
                   android:background="@drawable/spinner_border"
                   android:orientation="horizontal">

                   <Spinner
                       android:id="@+id/Spinner"
                       android:layout_width="250dp"
                       android:layout_height="wrap_content"
                       android:layout_centerVertical="true"
                       android:layout_gravity="center"
                       android:background="@android:color/transparent"
                       android:gravity="center"
                       android:layout_marginLeft="5dp"
                       android:spinnerMode="dropdown"/>

                   <ImageView
                       android:layout_width="50dp"
                       android:layout_height="40dp"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:layout_gravity="center"
                       android:src="@drawable/drop" />

               </RelativeLayout>
               <RelativeLayout
                   android:layout_marginTop="15dp"
                   android:layout_width="250dp"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="3dp"
                   android:layout_weight=".28"
                   android:background="@drawable/spinner_border"
                   android:orientation="horizontal">

                   <Spinner
                       android:id="@+id/Spinner2"
                       android:layout_width="250dp"
                       android:layout_height="wrap_content"
                       android:layout_centerVertical="true"
                       android:layout_gravity="center"
                       android:background="@android:color/transparent"
                       android:gravity="center"
                       android:layout_marginLeft="5dp"
                       android:spinnerMode="dropdown"/>

                   <ImageView
                       android:layout_width="50dp"
                       android:layout_height="40dp"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:layout_gravity="center"
                       android:src="@drawable/drop" />

               </RelativeLayout>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/black"
                       android:text="Name:"
                       android:textSize="16sp"
                       android:layout_marginTop="10dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/holo_red_dark"
                       android:text="*"
                       android:textSize="18sp"
                       android:layout_marginTop="10dp"/>
               </LinearLayout>
               <EditText
                   android:layout_width="250dp"
                   android:layout_height="wrap_content"
                   android:minHeight="40dp"
                   android:inputType="textCapSentences|textMultiLine"
                   android:background="@drawable/text_area_back"
                   android:id="@+id/editText_dr_name"
                   android:layout_marginTop="7dp"
                   android:paddingLeft="7dp"/>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/black"
                       android:text="Education:"
                       android:textSize="16sp"
                       android:layout_marginTop="10dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/holo_red_dark"
                       android:text="*"
                       android:textSize="18sp"
                       android:layout_marginTop="10dp"/>
               </LinearLayout>
               <EditText
                   android:layout_width="250dp"
                   android:layout_height="wrap_content"
                   android:minHeight="40dp"
                   android:inputType="textCapSentences|textMultiLine"
                   android:background="@drawable/text_area_back"
                   android:id="@+id/editText_dr_edu"
                   android:layout_marginTop="7dp"
                   android:paddingLeft="7dp"/>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/black"
                       android:text="Timing:"
                       android:textSize="16sp"
                       android:layout_marginTop="10dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/holo_red_dark"
                       android:text="*"
                       android:textSize="18sp"
                       android:layout_marginTop="10dp"/>
               </LinearLayout>
               <EditText
                   android:layout_width="250dp"
                   android:layout_height="wrap_content"
                   android:minHeight="40dp"
                   android:inputType="textCapSentences|textMultiLine"
                   android:background="@drawable/text_area_back"
                   android:id="@+id/editText_dr_timing"
                   android:layout_marginTop="7dp"
                   android:paddingLeft="7dp"/>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/black"
                       android:text="Fee:"
                       android:textSize="16sp"
                       android:layout_marginTop="10dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/holo_red_dark"
                       android:text="*"
                       android:textSize="18sp"
                       android:layout_marginTop="10dp"/>
               </LinearLayout>
               <EditText
                   android:layout_width="250dp"
                   android:layout_height="wrap_content"
                   android:minHeight="40dp"
                   android:inputType="textCapSentences|textMultiLine"
                   android:background="@drawable/text_area_back"
                   android:id="@+id/editText_dr_fee"
                   android:layout_marginTop="7dp"
                   android:paddingLeft="7dp"/>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/black"
                       android:text="Experience:"
                       android:textSize="16sp"
                       android:layout_marginTop="10dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/holo_red_dark"
                       android:text="*"
                       android:textSize="18sp"
                       android:layout_marginTop="10dp"/>
               </LinearLayout>
               <EditText
                   android:layout_width="250dp"
                   android:layout_height="wrap_content"
                   android:minHeight="40dp"
                   android:inputType="textCapSentences|textMultiLine"
                   android:background="@drawable/text_area_back"
                   android:id="@+id/editText_dr_experience"
                   android:layout_marginTop="7dp"
                   android:paddingLeft="7dp"/>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/black"
                       android:text="Phone:"
                       android:textSize="16sp"
                       android:layout_marginTop="10dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/holo_red_dark"
                       android:text="*"
                       android:textSize="18sp"
                       android:layout_marginTop="10dp"/>
               </LinearLayout>
               <EditText
                   android:layout_width="250dp"
                   android:layout_height="40dp"
                   android:hint="0300XXXXXXX"
                   android:background="@drawable/text_area_back"
                   android:id="@+id/editText_dr_phone"
                   android:layout_marginTop="7dp"
                   android:paddingLeft="7dp"
                   android:inputType="textCapSentences"/>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/black"
                       android:text="Address:"
                       android:textSize="16sp"
                       android:layout_marginTop="10dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/holo_red_dark"
                       android:text="*"
                       android:textSize="18sp"
                       android:layout_marginTop="10dp"/>
               </LinearLayout>

               <EditText
                   android:id="@+id/editText_dr_address"
                   android:layout_width="250dp"
                   android:layout_height="wrap_content"
                   android:minHeight="80dp"
                   android:inputType="textCapSentences|textMultiLine"
                   android:layout_marginTop="7dp"
                   android:background="@drawable/text_area_back"
                   android:minLines="3"
                   android:paddingLeft="7dp"
                   android:paddingTop="7dp"
                   android:gravity="top"/>


               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/black"
                       android:text="Services:"
                       android:textSize="16sp"
                       android:layout_marginTop="10dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/holo_red_dark"
                       android:text="*"
                       android:textSize="18sp"
                       android:layout_marginTop="10dp"/>
               </LinearLayout>
               <EditText
                   android:layout_width="250dp"
                   android:layout_height="wrap_content"
                   android:minHeight="40dp"
                   android:inputType="textCapSentences|textMultiLine"
                   android:background="@drawable/text_area_back"
                   android:id="@+id/editText_dr_services"
                   android:layout_marginTop="7dp"
                   android:paddingLeft="7dp"/>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/black"
                       android:text="Category:"
                       android:textSize="16sp"
                       android:layout_marginTop="10dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/holo_red_dark"
                       android:text="*"
                       android:textSize="18sp"
                       android:layout_marginTop="10dp"/>
               </LinearLayout>
               <EditText
                   android:layout_width="250dp"
                   android:layout_height="wrap_content"
                   android:minHeight="40dp"
                   android:inputType="textCapSentences|textMultiLine"
                   android:background="@drawable/text_area_back"
                   android:id="@+id/editText_dr_category"
                   android:layout_marginTop="7dp"
                   android:paddingLeft="7dp"/>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/black"
                       android:text="Hospital:"
                       android:textSize="16sp"
                       android:layout_marginTop="10dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@android:color/holo_red_dark"
                       android:text="*"
                       android:textSize="18sp"
                       android:layout_marginTop="10dp"/>
               </LinearLayout>
               <EditText
                   android:layout_width="250dp"
                   android:layout_height="wrap_content"
                   android:minHeight="40dp"
                   android:inputType="textCapSentences|textMultiLine"
                   android:background="@drawable/text_area_back"
                   android:id="@+id/editText_dr_hospital"
                   android:layout_marginTop="7dp"
                   android:paddingLeft="7dp"/>

               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="40dp"
                   android:id="@+id/button_submit"
                   android:text="Add doctor"
                   android:background="@drawable/button_bg"
                   android:padding="5dp"
                   android:layout_marginTop="15dp"
                   android:textColor="@android:color/white"
                   android:textSize="12sp"/>


           </LinearLayout>
       </LinearLayout>


    </ScrollView>



</LinearLayout>
