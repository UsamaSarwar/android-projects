<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <gradient android:endColor="@color/colorPrimaryDarkOpacity" android:startColor="@color/colorPrimaryDarkOpacity" android:angle="-90"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <corners android:radius="2dip"/>
            <gradient android:endColor="@color/colorPrimaryDark" android:startColor="@color/colorPrimaryDark" android:angle="-90"/>
        </shape>
    </item>
</selector>