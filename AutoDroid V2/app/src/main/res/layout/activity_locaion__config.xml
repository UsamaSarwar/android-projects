<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.furqan.frontendsdevelopment.LocationsConfig"
    android:background="#FFFFFF"
    android:padding="0dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Locations"
        android:id="@+id/textView10"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/actionbar_bg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="0dp" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="120dp"
        android:id="@+id/imageView5"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:background="@drawable/locationbased" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleLocation"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Enter Location Name"
        android:textColor="#000000"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <RadioGroup
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titleLocation"
        android:id="@+id/radioGroup"
        android:layout_margin="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Internet"
            android:id="@+id/textView3"
            android:textSize="30dp"
            android:textColor="#000000"
            android:layout_margin="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wifi"
            android:id="@+id/wifiradbtn"
            android:checked="false"
            android:textSize="20dp"
            android:textColor="#000000" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3G"
            android:id="@+id/gradbtn"
            android:checked="false"
            android:textSize="20dp"
            android:textColor="#000000" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Off"
            android:id="@+id/offrdbtn"
            android:checked="false"
            android:textSize="20dp"
            android:textColor="#000000" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_below="@+id/titleLocation"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/radioGroup2"
        android:layout_margin="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sound"
            android:id="@+id/textView4"
            android:textSize="30dp"
            android:textColor="#000000"
            android:layout_margin="10dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Silent"
            android:id="@+id/silentradbtn"
            android:checked="false"
            android:textSize="20dp"
            android:textColor="#000000" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vibrate"
            android:id="@+id/vibradbtn"
            android:checked="false"
            android:textSize="20dp"
            android:textColor="#000000" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal"
            android:id="@+id/norradbtn"
            android:checked="false"
            android:textSize="20dp"
            android:textColor="#000000" />
    </RadioGroup>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Wallpaper"
        android:id="@+id/setWallpapercheck"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:layout_toStartOf="@+id/imageButton"
        android:layout_toLeftOf="@+id/imageButton"
        android:textColor="#000000"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Save"
        android:id="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/radioGroup2"
        android:layout_alignEnd="@+id/radioGroup2"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/setWallpapercheck"
        android:background="@drawable/green_btn"
        android:layout_margin="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/imageButton"
        android:background="@android:drawable/ic_menu_camera"
        android:layout_toRightOf="@+id/radioGroup"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/setWallpapercheck"
        android:layout_alignTop="@+id/setWallpapercheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Lat :"
        android:id="@+id/textLat"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Lon:"
        android:id="@+id/textLon"
        android:layout_below="@+id/textLat"
        android:layout_alignLeft="@+id/textLat"
        android:layout_alignStart="@+id/textLat" />

</RelativeLayout>
